<% content_for :head do %>
<script type="text/javascript">
    $(function(){
        $("div.cityslides").carousel(
                                     { autoSlide: true, loop: true, nextBtn: false, prevBtn: false });
    });
</script>
<% end %>
<% content_for :leftbox do %>
<h2>JOIN US</h2>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :email %><br />
  <%= f.text_field :email %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></p>

  <!-- Checkbox for new user to indicate if they are city staff or if they are a designer -->
  <p><%= f.label :city_staff %><br />
  <input name="user[city_staff]" type="hidden" value="0" />
  <input id="user_city_staff" name="user[city_staff]" type="checkbox" value="1" onClick="document.getElementById('user_willing_to_meet_in_person').style.display='none';document.getElementById('foo').style.display='none';"/>
  </p>

  <p><%= f.label :designer %><br />
  <input name="user[designer]" type="hidden" value="0" />
  <input id="user_designer" name="user[designer]" type="checkbox" value="1" onclick="document.getElementById('user_willing_to_meet_in_person').style.display='inline';document.getElementById('foo').style.display='inline';" />
  </p>
  
    <p><label id="foo" for="user_willing_to_meet_in_person">Willing to meet in person</label><br />
  <input name="user[willing_to_meet_in_person]" type="hidden" value="0" />
  <input id="user_willing_to_meet_in_person" name="user[willing_to_meet_in_person]" type="checkbox" value="1" /></p>
    <script language="text/javascript">
    document.getElementById('user_willing_to_meet_in_person').style.display='none';
    </script>

  <p><%= f.submit "Sign up" %></p><br/>
<% end %>
<%= render :partial => "devise/shared/links" %>
<% end %>
<% content_for :slider do %>
  <div class="cityslides">
    <ul>
      <li><img src="/images/boston.jpg"></img></li>
      <li><img src="/images/philly.jpg"></img></li>
      <li><img src="/images/seattle.jpg"></img></li>
    </ul>
  </div> 
<% end %>